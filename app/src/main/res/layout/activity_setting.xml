<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <include
        android:id="@+id/footer_nav"
        layout="@layout/activity_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer_nav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="#333333"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textColor="#757575"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tvSettingName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#757575"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tvSettingEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hashed Password"
                        android:textColor="#757575"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tvSettingPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="********"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:fontFamily="monospace"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferences"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnGoToBudget"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Budget Limit Setting"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="#FF9800"
                android:layout_marginBottom="12dp"
                android:drawableLeft="@android:drawable/ic_menu_myplaces"
                android:paddingStart="20dp"
                android:gravity="start|center_vertical"/>

            <Button
                android:id="@+id/btnGoToRecurring"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Recurring Setting"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="#2196F3"
                android:drawableLeft="@android:drawable/ic_menu_rotate"
                android:paddingStart="20dp"
                android:gravity="start|center_vertical"/>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:text="Logout"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>